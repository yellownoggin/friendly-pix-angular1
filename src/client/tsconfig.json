{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "js",
        "listFiles": true
    },
    "exclude": [
        "typings/globals/*",
        "node_modules/**",
        "bower_components/**"
    ],
    "filesGlob": [
        "typings/index.d.ts",
        "**/*.ts"
    ],
    "compileOnSave": true,
    "files": [
        "typings/index.d.ts",
        "app/app.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
